doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        script(src="https://kit.fontawesome.com/a5b1eae3e6.js" crossorigin="anonymous") 
        style
            include ../public/css/style.css
            include ../public/css/menu.css
        title Register
    body
        include ./guest_menu.pug
        .logo 
            img(src="/public/assets/images/logo.png")
        .container
            label(for="name") Name
            input(type="text" name="name" id="input_name")
            label(for="surname") Surname
            input(type="text" name="surname" id="input_surname")  
            label(for="email") Email
            input(type="text" name="email" id="input_email") 
            label(for="password") Password
            .pass_container
                input(type="password" name="password" id="input_password") 
                i(id="togglePassword" class="fas fa-eye-slash")
            input(type="submit", value="Register User" id="btn_create_user")

        script(src="//cdn.jsdelivr.net/npm/sweetalert2@11")
        script(src="utils/register_user.js")
        script(src="utils/toggle_password.js")

            